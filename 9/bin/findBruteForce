#!/usr/bin/env node

'use strict';

var bruteForce = require('../lib/bruteForce'),
	max = Number(process.argv[2]),
	triples = bruteForce(max),
	product = 1,
	key;

if (triples.length < 1) {
	console.log('No Pythagorean triples found!');
	return;
}

triples = triples[0]; // Let's only worry about the first triple
for (key in triples) {
	product *= triples[key];
}

console.log('First set of Pythagorean triples: %s', JSON.stringify(triples));
console.log('Their product: %d', product);