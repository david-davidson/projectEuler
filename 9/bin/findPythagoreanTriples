#!/usr/bin/env node

'use strict';

var bruteForce = require('../lib/bruteForce');

var max = Number(process.argv[2]);
var results = bruteForce(max);

if (results.length < 1) {
	console.log('No Pythagorean triples found!');
	return;
}

results = results[0];
console.log('First set of Pythagorean triples: ' + JSON.stringify(results));
console.log('Their product: ' + (results.a * results.b * results.c));